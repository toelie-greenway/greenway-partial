<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.GreenWay" parent="Base.Theme.GreenWay" />

    <style name="Platform.V14.Theme.GreenWay" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="Platform.Theme.GreenWay" parent="Platform.V14.Theme.GreenWay" />

    <style name="Base.Theme.GreenWay" parent="Platform.Theme.GreenWay">

        <!--Material color attributes -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>

        <item name="android:colorBackground">@color/color_background</item>

        <item name="colorSurface">@color/color_surface</item>
        <item name="colorError">@color/color_error</item>

        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="colorOnError">@color/color_on_error</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.GreenWay.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.GreenWay.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.GreenWay.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.GreenWay.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.GreenWay.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.GreenWay.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.GreenWay.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.GreenWay.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.GreenWay.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.GreenWay.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.GreenWay.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.GreenWay.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.GreenWay.Overline</item>

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.GreenWay.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.GreenWay.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.GreenWay.LargeComponent
        </item>

        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert
        </item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.GreenWay.BottomSheetDialog</item>
        <item name="navigationViewStyle">@style/Widget.GreenWay.NavigationView</item>
        <item name="tabStyle">@style/Widget.GreenWay.TabLayout.Colored</item>

        <!--Emphasis modifiers for "on" colors-->
        <item name="alphaEmphasisHigh">@dimen/alpha_emphasis_high</item>
        <item name="alphaEmphasisMedium">@dimen/alpha_emphasis_medium</item>
        <item name="alphaEmphasisDisabled">@dimen/alpha_emphasis_disabled</item>

        <!--Remap legacy AppCompat attributes to MaterialComponent attributes-->
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorAccent">?colorSecondary</item>

        <!-- TextView attributes -->
        <item name="android:textColorLink">?colorSecondaryVariant</item>

    </style>

    <style name="Theme.GreenWay.NoDisplay">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Theme.GreenWay.Asymt">
        <item name="android:colorBackground">@color/asymt_color_background</item>
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="textInputStyle">@style/Widget.Asymt.TextInputLayout</item>
        <item name="radioButtonStyle">@style/Widget.Asymt.RadioButton</item>
        <item name="checkboxStyle">@style/Widget.Asymt.CheckBox</item>
        <item name="extendedFloatingActionButtonStyle">
            @style/Widget.Asymt.ExtendedFloatingActionButton
        </item>
        <item name="textAppearanceToolbarTitle">@style/TextAppearance.Asymt.Title</item>
    </style>

    <style name="Theme.GreenWay.Asymt.Qr">
        <item name="android:colorBackground">@color/app_white</item>
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="switchStyle">@style/Widget.GreenWay.Switch.Primary</item>
        <item name="materialButtonStyle">
            @style/Widget.GreenWay.Button.UnelevatedButton.Rounded.Large
        </item>
        <item name="radioButtonStyle">@style/Widget.MaterialComponents.CompoundButton.RadioButton
        </item>
    </style>

    <style name="Theme.GreenWay.Thread">
        <item name="android:colorBackground">@color/qa_color_background</item>
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="textInputStyle">@style/Widget.Thread.TextInputLayout</item>
        <item name="radioButtonStyle">@style/Widget.Thread.RadioButton</item>
        <item name="checkboxStyle">@style/Widget.Thread.CheckBox</item>
        <item name="extendedFloatingActionButtonStyle">
            @style/Widget.Thread.ExtendedFloatingActionButton
        </item>
        <item name="switchStyle">@style/Widget.GreenWay.Switch.Primary</item>

        <!--        <item name="textAppearanceToolbarTitle">@style/TextAppearance.QA.Title</item>-->
    </style>

    <style name="Theme.GreenWay.NotificationSetting">
        <item name="colorSecondary">?colorPrimary</item>
    </style>

    <style name="Theme.GreenWay.FishFarmerRecordBook">
        <item name="colorSurface">@color/color_surface</item>

        <item name="android:colorBackground">@color/app_white</item>
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="switchStyle">@style/Widget.GreenWay.Switch.Primary</item>
        <item name="materialButtonStyle">
            @style/Widget.GreenWay.Button.UnelevatedButton.Rounded.Large
        </item>
        <item name="toolbarStyle">@style/Widget.GreenWay.Toolbar.Primary</item>
        <item name="toolbarNavigationButtonStyle">
            @style/Widget.GreenWay.Toolbar.Button.Navigation.Primary
        </item>
        <item name="textAppearanceToolbarTitle">@style/TextAppearance.GreenWay2.Title</item>
        <item name="textAppearanceToolbarTitleInverse">@style/TextAppearance.GreenWay2.Title.Inverse</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout</item>
        <item name="textInputStyle">@style/Widget.Asymt.TextInputLayout</item>
        <item name="radioButtonStyle">@style/Widget.Asymt.RadioButton</item>
        <item name="checkboxStyle">@style/Widget.Asymt.CheckBox</item>
    </style>

    <bool name="use_light_system_bars">true</bool>

    <style name="Widget.AppTheme.AppBar" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:windowTranslucentStatus">true</item>

        <!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->

<!--        <item name="android:windowLightStatusBar" tools:targetApi="23">@bool/use_light_system_bars</item>-->
<!--        <item name="android:windowLightNavigationBar" tools:targetApi="27">@bool/use_light_system_bars</item>-->

<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
<!--        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>-->
    </style>

</resources>
