<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/app_inactive_icon" />
            <padding android:bottom="@dimen/spacing_nano" android:left="@dimen/spacing_nano" android:right="@dimen/spacing_nano" android:top="@dimen/spacing_nano" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <padding android:bottom="@dimen/spacing_nano" android:left="@dimen/spacing_nano" android:right="@dimen/spacing_nano" android:top="@dimen/spacing_nano" />
            <stroke android:width="1dp" android:color="@color/app_divider" />
        </shape>
    </item>
</selector>