<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <inset android:insetLeft="2dp" android:insetTop="6dp" android:insetRight="2dp" android:insetBottom="6dp">
            <shape android:shape="rectangle">
                <corners android:radius="20dp" />
                <solid android:color="@color/app_transparent" />
                <stroke android:width="1dp" android:color="@color/theme_accent" />
                <padding android:bottom="2dp" android:left="8dp" android:right="8dp" android:top="2dp" />
            </shape>
        </inset>
    </item>
    <item android:state_focused="true">
        <inset android:insetLeft="2dp" android:insetTop="6dp" android:insetRight="2dp" android:insetBottom="6dp">
            <shape android:shape="rectangle">
                <corners android:radius="20dp" />
                <solid android:color="#1FFFFFFF" />
                <stroke android:width="1dp" android:color="@color/theme_accent" />
                <padding android:bottom="2dp" android:left="8dp" android:right="8dp" android:top="2dp" />
            </shape>
        </inset>
    </item>
    <item android:state_pressed="true">
        <inset android:insetLeft="2dp" android:insetTop="6dp" android:insetRight="2dp" android:insetBottom="6dp">
            <shape android:shape="rectangle">
                <corners android:radius="20dp" />
                <solid android:color="#1FFFFFFF" />
                <stroke android:width="1dp" android:color="@color/theme_accent" />
                <padding android:bottom="2dp" android:left="8dp" android:right="8dp" android:top="2dp" />
            </shape>
        </inset>
    </item>
    <item>
        <inset android:insetLeft="2dp" android:insetTop="6dp" android:insetRight="2dp" android:insetBottom="6dp">
            <shape android:shape="rectangle">
                <corners android:radius="20dp" />
                <solid android:color="@color/app_transparent" />
                <stroke android:width="1dp" android:color="@color/theme_primary" />
                <padding android:bottom="2dp" android:left="8dp" android:right="8dp" android:top="2dp" />
            </shape>
        </inset>
    </item>
</selector>
