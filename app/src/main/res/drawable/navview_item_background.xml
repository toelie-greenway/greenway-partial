<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <inset android:insetLeft="16dp" android:insetTop="8dp" android:insetRight="16dp" android:insetBottom="8dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/md_teal_100" />
                <stroke android:width="1dp" android:color="@color/app_divider" />
                <corners android:radius="8dp" />
            </shape>
        </inset>
    </item>
    <item>
        <inset android:insetLeft="16dp" android:insetTop="8dp" android:insetRight="16dp" android:insetBottom="8dp">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent" />
                <stroke android:width="1dp" android:color="@color/app_divider" />
                <corners android:radius="8dp" />
            </shape>
        </inset>
    </item>
</selector>