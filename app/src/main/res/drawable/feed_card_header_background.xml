<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#61159488" />
            <padding android:bottom="@dimen/spacing_micro" android:left="@dimen/spacing_normal" android:right="@dimen/spacing_normal" android:top="@dimen/spacing_micro" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="#16159488" />
            <padding android:bottom="@dimen/spacing_micro" android:left="@dimen/spacing_normal" android:right="@dimen/spacing_normal" android:top="@dimen/spacing_micro" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>