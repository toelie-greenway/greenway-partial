<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_auto_start="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_8"
        android:layout_marginEnd="@dimen/spacing_8"
        android:layout_marginBottom="@dimen/spacing_8"
        app:cardElevation="0dp"
        app:contentPadding="@dimen/spacing_16"
        app:strokeColor="#E7E7E7"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/image_view_placeholder"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="#E0E0E0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/post_title_placeholder"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:background="#E0E0E0"
                android:layout_marginEnd="@dimen/spacing_16"
                app:layout_constraintEnd_toStartOf="@+id/image_view_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/post_info_placeholder"
                android:layout_width="100dp"
                android:layout_height="12dp"
                android:layout_marginTop="@dimen/spacing_8"
                android:background="#E0E0E0"
                app:layout_constraintStart_toStartOf="@+id/post_title_placeholder"
                app:layout_constraintTop_toBottomOf="@+id/post_title_placeholder" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</com.facebook.shimmer.ShimmerFrameLayout>