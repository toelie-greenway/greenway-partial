<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:paddingStart="@dimen/keyline_1"
    android:paddingTop="@dimen/padding_normal"
    android:paddingEnd="@dimen/keyline_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.greenwaymyanmar.ui.widgets.AsylTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_qr_code_number"
            android:textAppearance="?textAppearanceCaption" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_micro"
            android:background="@drawable/app_4dp_rounded_border_white_selector"
            android:minHeight="48dp"
            android:paddingStart="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_small">

            <com.greenwaymyanmar.ui.widgets.AsylTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="GW-12345"
                android:textAppearance="?textAppearanceBody1" />

        </FrameLayout>

        <greenway_myanmar.org.ui.widget.GreenWayLargeDropdownTextInputView
            android:id="@+id/farm_dropdown_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            android:label="@string/label_farming_record_qr_farm_name" />

        <greenway_myanmar.org.ui.widget.GreenWayLargeDropdownTextInputView
            android:id="@+id/season_dropdown_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            android:label="@string/label_farming_record_qr_season" />

        <greenway_myanmar.org.ui.widget.GreenWayLargeSwitchOptionInputView
            android:id="@+id/phone_option_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            android:label="@string/label_farming_record_qr_phone_number"
            app:textPlaceholder="-" />

        <greenway_myanmar.org.ui.widget.GreenWayLargeSwitchOptionInputView
            android:id="@+id/farm_input_option_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            android:label="@string/label_farming_record_qr_show_farm_input"
            app:textPlaceholder="-" />

        <greenway_myanmar.org.ui.widget.GreenWayLargeSwitchOptionInputView
            android:id="@+id/yield_input_option_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            android:label="@string/label_farming_record_qr_show_yield"
            app:textPlaceholder="-" />

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_normal"
            android:text="@string/label_farming_record_qr_preview"
            android:textAppearance="?textAppearanceCaption" />

        <greenway_myanmar.org.ui.widget.GreenWayButton
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="@string/button_text_confirm" />

    </LinearLayout>
</ScrollView>