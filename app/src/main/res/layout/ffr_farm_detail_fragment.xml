<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/GreenWay.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|snap">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <greenway_myanmar.org.ui.widget.AspectRatioImageView
                    android:id="@+id/farm_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/farm_greyscale_placeholder"
                    app:imgAspectRatio="@dimen/aspect_16_9" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/scrim_pond_detail_hero_image" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/season_info_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/padding_normal"
                    android:layout_marginEnd="@dimen/padding_normal"
                    android:layout_marginBottom="@dimen/spacing_normal"
                    android:visibility="gone"
                    app:cardBackgroundColor="#ff000000"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    app:contentPaddingBottom="@dimen/spacing_16"
                    app:contentPaddingLeft="@dimen/spacing_16"
                    app:contentPaddingRight="@dimen/spacing_16"
                    app:contentPaddingTop="@dimen/spacing_8"
                    tools:visibility="visible">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <greenway_myanmar.org.ui.widget.GreenWayTextView
                            android:id="@+id/total_expense_label_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ffr_farm_detail_label_total_expense"
                            android:textColor="?colorOnPrimary"
                            app:fontFamily="@font/noto_sans_myanmar_light_300"
                            app:layout_constraintBaseline_toBaselineOf="@id/total_expense_text_view"
                            app:layout_constraintStart_toStartOf="parent" />

                        <greenway_myanmar.org.ui.widget.GreenWayMoneyTextView
                            android:id="@+id/total_expense_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?colorOnPrimary"
                            android:textSize="16sp"
                            app:fontFamily="@font/noto_sans_myanmar_medium_500"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="၄၀၀,၀၀၀ ကျပ်" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/fish_icon_image_view"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="@dimen/spacing_4"
                            android:scaleType="centerCrop"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/total_expense_text_view"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.GreenWay.Image.Circle" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/fish_icon_more_image_view"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="@dimen/spacing_2"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="@id/fish_icon_image_view"
                            app:layout_constraintStart_toEndOf="@id/fish_icon_image_view"
                            app:layout_constraintTop_toTopOf="@id/fish_icon_image_view"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.GreenWay.Image.Circle" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/fish_icon_more_scrim_image_view"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="#99000000"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="@id/fish_icon_more_image_view"
                            app:layout_constraintEnd_toEndOf="@id/fish_icon_more_image_view"
                            app:layout_constraintStart_toStartOf="@id/fish_icon_more_image_view"
                            app:layout_constraintTop_toTopOf="@id/fish_icon_more_image_view"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.GreenWay.Image.Circle" />

                        <greenway_myanmar.org.ui.widget.GreenWayTextView
                            android:id="@+id/more_fish_count_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?colorOnPrimary"
                            app:fontFamily="@font/noto_sans_myanmar_regular_400"
                            app:layout_constraintBottom_toBottomOf="@id/fish_icon_more_image_view"
                            app:layout_constraintEnd_toEndOf="@id/fish_icon_more_image_view"
                            app:layout_constraintStart_toStartOf="@id/fish_icon_more_image_view"
                            app:layout_constraintTop_toTopOf="@id/fish_icon_more_image_view"
                            tools:text="+5" />

                        <androidx.constraintlayout.widget.Group
                            android:id="@+id/more_fish_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:constraint_referenced_ids="more_fish_count_text_view,fish_icon_more_image_view,fish_icon_more_scrim_image_view" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </FrameLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:elevation="0dp"
                app:contentInsetStart="0dp"
                app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
                app:popupTheme="@style/GreenWay.PopupOverlay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <greenway_myanmar.org.ui.widget.GreenWayTextView
                        android:id="@+id/farm_name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_8"
                        android:textColor="?colorOnPrimary"
                        android:textSize="18sp"
                        app:fontFamily="@font/noto_sans_myanmar_regular_400"
                        tools:text="အမွှာကန်" />

                    <greenway_myanmar.org.ui.widget.GreenWayTextView
                        android:id="@+id/farm_season_info_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?colorOnPrimary"
                        android:textSize="14sp"
                        app:fontFamily="@font/noto_sans_myanmar_regular_400"
                        tools:text="၈ ဧက" />

                </LinearLayout>

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:minHeight="?actionBarSize"
            app:layout_collapseMode="pin"
            app:tabMode="fixed" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <greenway_myanmar.org.ui.widget.GreenWayExtendedFloatingActionButton
        android:id="@+id/add_new_fcr_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="@dimen/spacing_16"
        android:layout_marginBottom="@dimen/spacing_16"
        android:text="@string/ffr_fcr_action_add_new_fcr"
        app:icon="@drawable/ic_add_black_24dp"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>