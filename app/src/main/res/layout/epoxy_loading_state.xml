<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="greenway_myanmar.org.vo.Resource" />

        <import type="android.text.TextUtils" />

        <import type="greenway_myanmar.org.vo.Status" />

        <import type="greenway_myanmar.org.util.ListUtils" />

        <variable
            name="resource"
            type="Resource" />

        <variable
            name="emptyMessage"
            type="String" />

        <variable
            name="callback"
            type="greenway_myanmar.org.ui.common.RetryCallback" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_normal"
        android:paddingTop="@dimen/padding_normal"
        android:paddingEnd="@dimen/padding_normal"
        android:paddingBottom="@dimen/padding_normal"
        app:visibleGone="@{resource.data == null || ListUtils.isEmpty(resource.data)}">

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:id="@+id/empty_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:text="@{emptyMessage ?? @string/empty_list}"
            android:textColor="@color/app_secondary_text"
            android:textSize="16sp"
            app:visibleGone="@{resource.status == Status.SUCCESS &amp;&amp; ListUtils.isEmpty(resource.data)}" />

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:id="@+id/error_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:text="@{resource.message ?? @string/unknown_error}"
            android:textColor="@color/app_secondary_text"
            android:textSize="16sp"
            app:visibleGone="@{resource.status == Status.ERROR}" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:visibleGone="@{resource.status == Status.LOADING}" />

        <greenway_myanmar.org.ui.widget.GreenWayButton
            android:id="@+id/retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            android:onClick="@{() -> callback.retry()}"
            android:text="@string/retry"
            android:textColor="@color/app_secondary_text"
            app:backgroundTint="@color/theme_accent"
            app:visibleGone="@{resource.status == Status.ERROR &amp;&amp; (resource.code.value() &lt; 400 || resource.code.value() &gt;= 500)}" />

    </LinearLayout>
</layout>

