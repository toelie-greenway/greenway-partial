<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_16"
        android:paddingTop="@dimen/spacing_16"
        android:paddingEnd="@dimen/spacing_16"
        android:paddingBottom="@dimen/spacing_16">

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_farming_record_qr_quantity" />

        <greenway_myanmar.org.ui.widget.GreenWayTextInputLayout
            style="@style/Widget.GreenWay.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            app:hintEnabled="false">

            <greenway_myanmar.org.ui.widget.GreenWayTextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="500" />

        </greenway_myanmar.org.ui.widget.GreenWayTextInputLayout>

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="@string/label_farming_record_qr_estimated_cost"
            android:textAppearance="?textAppearanceCaption" />

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_triple"
            android:text="@string/label_farming_record_qr_summary_preview"
            android:textAppearance="?textAppearanceSubtitle2"
            android:textColor="?colorOnSurface"
            android:textSize="@dimen/app_text_size_caption" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_normal"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp" />

        <greenway_myanmar.org.features.farmingrecord.qr.presentation.widgets.QrFarmingInfoView
            android:id="@+id/farming_info_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_16" />

        <greenway_myanmar.org.features.farmingrecord.qr.presentation.widgets.QrUserInfoView
            android:id="@+id/user_info_view"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/spacing_8"
            android:layout_height="wrap_content" />

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_triple"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/label_farming_record_qr_order_status_message"
            android:textAppearance="?textAppearanceCaption" />

        <greenway_myanmar.org.ui.widget.GreenWayButton
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="@string/button_text_farming_record_qr_confirm_order" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>