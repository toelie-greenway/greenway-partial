<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp">

            <greenway_myanmar.org.ui.widget.GreenWayTextView
                style="?textAppearanceToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ffrb_nav_title_add_new_farming_season" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="@dimen/spacing_16"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <greenway_myanmar.org.ui.widget.GreenWayCheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ffr_add_edit_season_update_pond"
                android:textAppearance="?textAppearanceSubtitle2" />

            <greenway_myanmar.org.ui.widget.GreenWayTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_8"
                android:text="@string/ffr_add_edit_season_subtitle_season"
                android:textAppearance="?textAppearanceSubtitle1" />

            <greenway_myanmar.org.ui.widget.GreenWayTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_8"
                app:expandedHintEnabled="false"
                app:placeholderText="@string/ffr_add_edit_season_hint_season">

                <greenway_myanmar.org.ui.widget.GreenWayTextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </greenway_myanmar.org.ui.widget.GreenWayTextInputLayout>

            <greenway_myanmar.org.ui.widget.GreenWayTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:text="@string/ffr_add_edit_season_label_start_farming_date"
                android:textAppearance="?textAppearanceSubtitle2" />

            <greenway_myanmar.org.ui.widget.GreenWayDateInputView
                android:id="@+id/season_start_date_input_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_8" />

            <greenway_myanmar.org.features.fishfarmrecord.presentation.addeditseason.views.GreenWayFishListInputView
                android:id="@+id/fish_list_input_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16" />

            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Later" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>