<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        style="@style/Widget.MaterialComponents.AppBarLayout.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_close_black_24dp">

            <greenway_myanmar.org.ui.widget.GreenWayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ffrb_nav_title_add_new_fish_pond"
                android:textAppearance="?textAppearanceToolbarTitle"
                tools:text="Add pond information first to start recording the activities and expenses." />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_16"
            android:paddingTop="@dimen/spacing_16"
            android:paddingEnd="@dimen/spacing_16"
            android:paddingBottom="@dimen/spacing_16">

            <greenway_myanmar.org.ui.widget.GreenWayTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:text="@string/ffr_label_add_edit_pond_subtitle"
                android:textAppearance="?textAppearanceSubtitle1" />

            <greenway_myanmar.org.ui.widget.GreenWayTextInputLayout
                android:id="@+id/farm_name_textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:hint="@string/ffr_add_edit_pond_hint_pond_name">

                <greenway_myanmar.org.ui.widget.GreenWayTextInputEditText
                    android:id="@+id/farm_name_textInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </greenway_myanmar.org.ui.widget.GreenWayTextInputLayout>

            <greenway_myanmar.org.ui.widget.GreenWayTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:lineSpacingMultiplier="1.3"
                android:text="@string/ffr_add_edit_pond_label_location_and_area"
                android:textAppearance="?textAppearanceSubtitle2" />

            <greenway_myanmar.org.ui.widget.GreenWayTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_8"
                android:lineSpacingMultiplier="1.3"
                android:text="@string/ffr_add_edit_pond_label_map"
                android:textAppearance="?textAppearanceCaption" />

            <greenway_myanmar.org.ui.widget.AspectRatioImageView
                android:id="@+id/farm_map_image_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/spacing_8"
                android:scaleType="fitXY"
                app:imgAspectRatio="@dimen/aspect_12_3"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.GreenWay.Image.Rounded.8dp" />

            <greenway_myanmar.org.ui.widget.GreenWayTextInputLayout
                android:id="@+id/farm_area_textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_8"
                android:hint="@string/ffr_add_edit_pond_hint_area"
                app:suffixText="@string/area_acre_symbol">

                <greenway_myanmar.org.ui.widget.GreenWayTextInputEditText
                    android:id="@+id/farm_area_textInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />

            </greenway_myanmar.org.ui.widget.GreenWayTextInputLayout>

            <com.greenwaymyanmar.ui.widgets.AsylImageInputView
                android:id="@+id/farm_image_input_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16" />

            <RadioGroup
                android:id="@+id/farm_ownership_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:orientation="horizontal">

                <greenway_myanmar.org.ui.widget.GreenWayRadioButton
                    android:id="@+id/farm_ownership_own_radio_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_4"
                    android:layout_weight="1"
                    android:background="@drawable/asymt_radio_button_background"
                    android:text="@string/ffr_add_edit_pond_ownership_own" />

                <greenway_myanmar.org.ui.widget.GreenWayRadioButton
                    android:id="@+id/farm_ownership_rent_radio_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_micro"
                    android:layout_weight="1"
                    android:background="@drawable/asymt_radio_button_background"
                    android:text="@string/ffr_add_edit_pond_ownership_rent"
                    android:textAppearance="?textAppearanceBody1" />

            </RadioGroup>

            <greenway_myanmar.org.ui.widget.GreenWayCheckBox
                android:id="@+id/detail_check_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:text="@string/ffr_add_edit_pond_label_detail" />

            <greenway_myanmar.org.ui.widget.GreenWayTextInputLayout
                android:id="@+id/upaing_no_textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ffr_add_edit_pond_hint_upaing_no">

                <greenway_myanmar.org.ui.widget.GreenWayTextInputEditText
                    android:id="@+id/upaing_no_textInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:nextFocusForward="@id/farm_depth_text_input_edit_text" />

            </greenway_myanmar.org.ui.widget.GreenWayTextInputLayout>

            <greenway_myanmar.org.ui.widget.GreenWayTextInputLayout
                android:id="@+id/farm_depth_textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_8"
                app:suffixText="@string/measurement_feet_symbol"
                android:hint="@string/ffr_add_edit_pond_hint_pond_depth">

                <greenway_myanmar.org.ui.widget.GreenWayTextInputEditText
                    android:id="@+id/farm_depth_text_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />

            </greenway_myanmar.org.ui.widget.GreenWayTextInputLayout>

            <greenway_myanmar.org.ui.widget.GreenWayButton
                android:id="@+id/submit_button"
                style="@style/Widget.GreenWay2.Button.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_triple"
                android:text="@string/action_next" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!--    <include-->
    <!--        layout="@layout/uploading_state"-->
    <!--        app:callback="@{() -> viewModel.submit()}"-->
    <!--        app:resource="@{uploadingResource}"-->
    <!--        tools:visibility="gone" />-->

</androidx.coordinatorlayout.widget.CoordinatorLayout>