<?xml version="1.0" encoding="utf-8"?>
<greenway_myanmar.org.ui.widget.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingStart="@dimen/padding_normal"
    android:background="@drawable/app_4dp_rounded_border_white_selector"
    android:paddingEnd="@dimen/spacing_normal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:importantForAccessibility="no"
        android:src="?android:listChoiceIndicatorSingle" />

    <greenway_myanmar.org.ui.widget.GreenWayTextView
        android:id="@+id/reason_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="အခြား"
        android:layout_marginStart="@dimen/spacing_16"
        android:layout_weight="1"
        android:textAppearance="?textAppearanceSubtitle1" />


</greenway_myanmar.org.ui.widget.CheckableLinearLayout>