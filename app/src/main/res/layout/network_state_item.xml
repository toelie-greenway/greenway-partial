<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="networkState"
            type="greenway_myanmar.org.vo.NetworkState" />

        <import type="greenway_myanmar.org.vo.NetworkState" />

        <import type="greenway_myanmar.org.vo.Status" />

        <import type="greenway_myanmar.org.util.CommonConstants" />

        <variable
            name="retryCallback"
            type="greenway_myanmar.org.ui.common.RetryCallback" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp">

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:id="@+id/error_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.5"
            android:text="@{networkState.msg}"
            android:textColor="@color/app_secondary_text"
            android:textSize="16sp"
            app:visibleGone="@{networkState.msg != null}" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:visibleGone="@{networkState.status == Status.LOADING}" />

        <greenway_myanmar.org.ui.widget.GreenWayButton
            android:id="@+id/retry_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_normal"
            android:onClick="@{() -> retryCallback.retry()}"
            android:text="@string/retry"
            android:textColor="@color/app_secondary_text"
            app:visibleGone="@{networkState.status == Status.ERROR &amp;&amp; networkState.msg == CommonConstants.NETWORK_ERROR_MESSAGE}" />
    </LinearLayout>
</layout>