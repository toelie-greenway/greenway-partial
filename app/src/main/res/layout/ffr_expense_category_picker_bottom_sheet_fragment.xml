<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_normal"
    android:paddingBottom="@dimen/spacing_36"
    android:paddingTop="24dp"
    android:paddingEnd="@dimen/padding_normal">

    <greenway_myanmar.org.ui.widget.GreenWayTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ffr_expense_category_chooser_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:clipToPadding="false"
            android:paddingTop="@dimen/padding_normal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/ffr_expense_category_picker_list_item" />

        <greenway_myanmar.org.ui.widget.GreenWayLoadingStateView
            android:id="@+id/loading_state_view"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/spacing_16"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

    </FrameLayout>

</LinearLayout>