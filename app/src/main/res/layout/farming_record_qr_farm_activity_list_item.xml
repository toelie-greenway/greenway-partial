<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?listPreferredItemHeight">

    <View
        android:id="@+id/top_route"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="?colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/icon"
        app:layout_constraintEnd_toEndOf="@id/icon"
        app:layout_constraintStart_toStartOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottom_route"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="?colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/icon"
        app:layout_constraintStart_toStartOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@id/icon" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/spacing_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_check_circle_black_24dp"
        app:tint="?colorPrimary" />

    <greenway_myanmar.org.ui.widget.GreenWayTextView
        android:id="@+id/activity_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_8"
        android:textAppearance="?textAppearanceBody2"
        app:layout_constraintBottom_toBottomOf="@id/icon"
        app:layout_constraintEnd_toStartOf="@+id/date_text_view"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="@id/icon"
        tools:text="မြေပြုပြင်ခြင်း" />

    <greenway_myanmar.org.ui.widget.GreenWayTextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody2"
        app:layout_constraintBaseline_toBaselineOf="@id/activity_name_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="၂ ဂျွန်, ၂၀၂၂၊ ၉း၄၅ နံနက်" />

    <greenway_myanmar.org.ui.widget.GreenWayTextView
        android:id="@+id/detail_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_8"
        android:textAppearance="?textAppearanceCaption"
        app:layout_constraintEnd_toEndOf="parent"
        android:lineSpacingMultiplier="1.3"
        app:layout_constraintStart_toStartOf="@id/activity_name_text_view"
        app:layout_constraintTop_toBottomOf="@id/activity_name_text_view"
        tools:text="နွားချေး - (၂) လှည်း\nစီပီ ၁၅း၁၅း၁၅ - (၂) အိတ်" />

</androidx.constraintlayout.widget.ConstraintLayout>