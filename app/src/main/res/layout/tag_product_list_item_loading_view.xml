<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/spacing_16"
    android:paddingTop="@dimen/spacing_8"
    android:paddingEnd="@dimen/spacing_16"
    android:paddingBottom="@dimen/spacing_8"
    app:shimmer_auto_start="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/tag_color_placeholder"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="#E0E0E0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/image_view_placeholder"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="#E0E0E0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/product_name_placeholder"
            android:layout_width="200dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:background="#E0E0E0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tag_color_placeholder" />

        <View
            android:id="@+id/distributor_name_placeholder"
            android:layout_width="100dp"
            android:layout_height="12dp"
            android:layout_marginTop="8dp"
            android:background="#E0E0E0"
            app:layout_constraintStart_toStartOf="@+id/product_name_placeholder"
            app:layout_constraintTop_toBottomOf="@+id/product_name_placeholder" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>