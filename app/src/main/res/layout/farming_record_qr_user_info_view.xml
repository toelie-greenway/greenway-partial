<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <greenway_myanmar.org.ui.widget.GreenWayTextView
        style="@style/FarmingRecordQrInfoSubtitleStyle"
        android:text="@string/label_farming_record_qr_farmer_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/farmer_profile"
            tools:src="@drawable/profile_image_placeholder"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.GreenWay.Image.Circle"
            app:strokeWidth="1dp" />

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_16"
            tools:text="ကိုသိန်းစိုးမင်း"
            android:id="@+id/farmer_name"
            android:textAppearance="?textAppearanceBody2" />

    </LinearLayout>

    <LinearLayout
        style="@style/FarmingRecordQrInfoItemStyle"
        android:layout_marginTop="@dimen/spacing_16">

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            style="@style/FarmingRecordQrInfoItemLabelStyle"
            android:text="@string/label_farming_record_qr_farmer_contact_number" />

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:id="@+id/farmer_contact_number"
            style="@style/FarmingRecordQrInfoItemValueStyle"
            tools:text="09123456789" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_divider" />

    <LinearLayout style="@style/FarmingRecordQrInfoItemStyle">

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            style="@style/FarmingRecordQrInfoItemLabelStyle"
            android:text="@string/label_farming_record_qr_farmer_location" />

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:id="@+id/farmer_address"
            style="@style/FarmingRecordQrInfoItemValueStyle"
            tools:text="ပုလဲမြို့နယ်၊ တောင်ပုရွာ" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_divider" />

    <LinearLayout style="@style/FarmingRecordQrInfoItemStyle">

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            style="@style/FarmingRecordQrInfoItemLabelStyle"
            android:text="@string/label_farming_record_qr_farmer_crops" />

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:id="@+id/farmer_crop"
            style="@style/FarmingRecordQrInfoItemValueStyle"
            tools:text="မြေပဲ၊ ကြက်သွန်နီ၊ ပဲတီစိမ်း၊ဂျုံ၊ ငရုတ်သီး" />

    </LinearLayout>

</merge>