<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_myanmar_medium_500"
            tools:text="Topic 1"
            android:textSize="14sp"
            app:fontFamily="@font/noto_sans_myanmar_medium_500" />

        <com.greenwaymyanmar.common.feature.tag.presentation.tag.views.TagColorIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_8" />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_2"
        app:cardCornerRadius="@dimen/spacing_8"
        app:cardElevation="0dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_view"
                android:layout_width="90dp"
                android:layout_height="79dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <greenway_myanmar.org.ui.widget.GreenWayTextView
                android:id="@+id/tag_name_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginEnd="@dimen/spacing_8"
                android:fontFamily="@font/noto_sans_myanmar_semi_bold_600"
                android:textColor="#000000"
                android:textSize="16sp"
                app:fontFamily="@font/noto_sans_myanmar_semi_bold_600"
                app:layout_constraintBottom_toTopOf="@+id/category_name_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/image_view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="နဂါးမောက် ပင်စည်ပုပ်ရောဂါ" />

            <greenway_myanmar.org.ui.widget.GreenWayTextView
                android:id="@+id/category_name_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginEnd="@dimen/spacing_8"
                android:fontFamily="@font/noto_sans_myanmar_medium_500"
                android:textColor="#505050"
                android:textSize="14sp"
                app:fontFamily="@font/noto_sans_myanmar_medium_500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/image_view"
                app:layout_constraintTop_toBottomOf="@+id/tag_name_text_view"
                tools:text="မှိုရောဂါ" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</merge>