<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPaddingTop="@dimen/spacing_16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16"
            tools:text="မတ် ၃ ၊ ၂၀၂၀ · ဂါ"
            android:textColor="?colorOnSurface"
            android:textSize="14sp"
            app:fontFamily="@font/noto_sans_myanmar_regular_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:id="@+id/ratio_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16"
            android:layout_marginEnd="@dimen/spacing_16"
            tools:text="အချိုး ၁.၂၅"
            android:textColor="#4A4A4A"
            android:textSize="16sp"
            app:fontFamily="@font/noto_sans_myanmar_bold_700"
            app:layout_constraintBaseline_toBaselineOf="@id/date_text_view"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#EFEFF4"
            app:layout_constraintBottom_toBottomOf="@id/feed_weight_label_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/feed_weight_label_text_view" />

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:id="@+id/feed_weight_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_16"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:text="@string/ffr_fcr_label_total_feed_weight"
            android:textColor="?colorOnSurface"
            android:textSize="14sp"
            app:fontFamily="@font/noto_sans_myanmar_semi_bold_600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_text_view" />

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:id="@+id/feed_weight_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16"
            android:layout_marginEnd="@dimen/spacing_16"
            android:text="5,000 ပိဿာ"
            android:textColor="?colorOnSurface"
            android:textSize="14sp"
            app:fontFamily="@font/noto_sans_myanmar_semi_bold_600"
            app:layout_constraintBaseline_toBaselineOf="@id/feed_weight_label_text_view"
            app:layout_constraintEnd_toEndOf="parent" />

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:id="@+id/gain_weight_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:text="@string/ffr_fcr_label_total_gain_weight"
            android:textColor="?colorOnSurface"
            android:textSize="14sp"
            app:fontFamily="@font/noto_sans_myanmar_semi_bold_600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feed_weight_label_text_view" />

        <greenway_myanmar.org.ui.widget.GreenWayTextView
            android:id="@+id/gain_weight_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16"
            android:layout_marginEnd="@dimen/spacing_16"
            android:text="4,000 ပိဿာ"
            android:textColor="?colorOnSurface"
            android:textSize="14sp"
            app:fontFamily="@font/noto_sans_myanmar_semi_bold_600"
            app:layout_constraintBaseline_toBaselineOf="@id/gain_weight_label_text_view"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#EDEDED"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gain_weight_label_text_view" />

        <greenway_myanmar.org.ui.widget.GreenWayButton
            android:id="@+id/delete_button"
            style="@style/Widget.GreenWay2.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_8"
            android:text="@string/ffr_fcr_action_delete"
            android:textColor="#FF3B30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <greenway_myanmar.org.ui.widget.GreenWayButton
            android:id="@+id/edit_button"
            style="@style/Widget.GreenWay2.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_8"
            android:text="@string/ffr_fcr_action_delete"
            android:textColor="#8E8E93"
            app:layout_constraintEnd_toStartOf="@id/delete_button"
            app:layout_constraintTop_toBottomOf="@id/divider" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>